{
  "manifest_version": 3,
  "name": "TabCloset",
  "version": "1.0",
  "description": "Save, organize, and relaunch groups of URLs with notes",
  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; img-src 'self' data: chrome:;"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/tabcloset_icon.png",
      "48": "icons/tabcloset_icon.png",
      "128": "icons/tabcloset_icon.png"
    }
  },
  
    "icons": {
      "16": "icons/tabcloset_icon.png",
      "48": "icons/tabcloset_icon.png",
      "128": "icons/tabcloset_icon.png"
    }
 

} 